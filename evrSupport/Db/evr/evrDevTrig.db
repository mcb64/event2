{
#field( TPRO, "2" )
	field( FLNK, "$(TRIG):BW_SEQ2" )
	field( LNK1, "$(TRIG):BW_TWID" )
}

record( ai, "$(TRIG):BW_SW2" )
{
}

record( ao, "$(TRIG):BW_TWID" )
{
	field( SDIS, "$(TRIG):BW_SW2.VAL" )
